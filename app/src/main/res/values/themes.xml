<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AnaMuslim.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="bottomSheetStyle">@style/BottomSheets</item>
        <item name="android:animationDuration">2500</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.AnaMuslim" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color and surface color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <!-- Status bar color and icons color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!--item name="android:colorPrimaryDark" tools:targetApi="l">@color/transparent</item-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- AnaMuslim custom theme-->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetStyle">@style/BottomSheets</item>
    </style>

    <style name="BottomSheets" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.LargeComponent</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">@dimen/default_corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CardContainerShape">
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="TextAppearances">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.015625</item>
    </style>

    <style name="TextAppearances.HeaderTitle">
        <item name="fontFamily">@font/font_bukrar</item>
        <item name="android:fontFamily">@font/font_bukrar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.015625</item>
    </style>

    <style name="TextAppearances.HeaderSubTitle">
        <item name="fontFamily">@font/font_bukrar</item>
        <item name="android:fontFamily">@font/font_bukrar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">9sp</item>
        <item name="android:letterSpacing">-0.015625</item>
    </style>

</resources>