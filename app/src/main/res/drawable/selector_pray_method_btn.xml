<selector xmlns:android="http://schemas.android.com/apk/res/android" android:autoMirrored="true" android:enterFadeDuration="250" android:exitFadeDuration="250">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="35dp" />
            <size android:width="30dp" android:height="30dp" />
            <stroke android:width="1dp" android:color="@color/bg_input_box" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/bg_input_box" />
            <corners android:radius="35dp" />
            <size android:width="30dp" android:height="30dp" />
        </shape>
    </item>
</selector>