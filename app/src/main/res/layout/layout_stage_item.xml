<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_siv_container"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_piv_indicator_passed">

    <ImageView
        android:id="@+id/stage_indicator_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_passed_pray"
        android:backgroundTint="@color/green"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_done"
        app:tint="@color/white"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/stage_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/stage_indicator_iv"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:text="Stage Title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/green"
        android:textSize="14sp"
        app:autoSizeMaxTextSize="13sp"
        app:autoSizeTextType="uniform"
        tools:ignore="HardcodedText" />

</RelativeLayout>