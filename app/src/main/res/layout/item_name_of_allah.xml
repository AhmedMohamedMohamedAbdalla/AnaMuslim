<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp"
    app:rippleColor="@color/ripple_som_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/stv_item_name_of_allah_ordinal"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:text="1"
            android:textColor="@color/green"
            android:textSize="30sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:fontFamily="@font/font_bukrar"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_name_of_allah"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/allahName_AlRahman"
            android:textColor="@color/darkAdaptiveColor"
            android:textSize="25sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="25sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="@font/font_bukrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/stv_item_name_of_allah_ordinal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>