<com.furkanakdemir.surroundcardview.SurroundCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:scv_duration="600"
    app:scv_startPoint="bottom_start"
    app:scv_width="2dp"
    app:scv_surrounded="false"
    app:scv_color="@color/cardBackground1"
    app:strokeColor="@color/cardBackground1"
    app:cardBackgroundColor="@color/bg_input_box"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="10dp"
    app:contentPaddingTop="10dp"
    app:rippleColor="@color/ripple_white">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_row_cal_day_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:maxLength="5"
            android:maxLines="1"
            android:text="FRI"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
            android:textColor="@color/subtitleTextColor"
            android:textSize="13sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeTextType="uniform"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_row_cal_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="31"
            android:textColor="@color/cardBackground1"
            android:textSize="25sp"
            android:textStyle="bold"
            app:fontFamily="@font/font_jf_flat_regular"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_row_cal_month_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="1"
            android:text="Ramadan"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
            android:textColor="@color/darkAdaptiveColor"
            android:textSize="8sp"
            tools:ignore="HardcodedText" />

