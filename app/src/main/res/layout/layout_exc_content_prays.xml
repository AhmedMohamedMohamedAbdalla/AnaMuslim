<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_input_box"
    android:padding="10dp">

    <com.typ.muslim.ui.SquarePrayView
        android:id="@+id/fajr_spv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5" />

    <com.typ.muslim.ui.SquarePrayView
        android:id="@+id/sunrise_spv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fajr_spv"
        app:layout_constraintTop_toTopOf="@id/fajr_spv"
        app:layout_constraintWidth_percent=".5" />

    <com.typ.muslim.ui.SquarePrayView
        android:id="@+id/dhuhr_spv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fajr_spv"
        app:layout_constraintWidth_percent=".5" />

    <com.typ.muslim.ui.SquarePrayView
        android:id="@+id/asr_spv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dhuhr_spv"
        app:layout_constraintTop_toTopOf="@id/dhuhr_spv"
        app:layout_constraintWidth_percent=".5" />

    <com.typ.muslim.ui.SquarePrayView
        android:id="@+id/maghrib_spv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dhuhr_spv"
        app:layout_constraintWidth_percent=".5" />

    <com.typ.muslim.ui.SquarePrayView
        android:id="@+id/isha_spv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/maghrib_spv"
        app:layout_constraintTop_toTopOf="@id/maghrib_spv"
        app:layout_constraintWidth_percent=".5" />

</androidx.constraintlayout.widget.ConstraintLayout>