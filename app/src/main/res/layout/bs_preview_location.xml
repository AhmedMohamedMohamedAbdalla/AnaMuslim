<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MaterialComponents.BottomSheet.Modal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/picked_location"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/colorText"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/country"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeTextType="uniform" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/t1"
            android:layout_alignBottom="@id/t1"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/t1"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="Egypt"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/location"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeTextType="uniform" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/t2"
            android:layout_alignBottom="@id/t2"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/t2"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="Cairo"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/latitude"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeTextType="uniform" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/t3"
            android:layout_alignBottom="@id/t3"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/t3"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="30.044281"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/longitude"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeTextType="uniform" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/t4"
            android:layout_alignBottom="@id/t4"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/t4"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="31.340002"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/t5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/timezone"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeTextType="uniform" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_timezone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/t5"
            android:layout_alignBottom="@id/t5"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/t5"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="Cairo Standard Time (+2.00)"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="@string/_continue"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="@dimen/default_corner_radius"
        app:icon="@drawable/ic_arrow_to_right"
        app:iconGravity="textEnd" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/cancel"
        android:textColor="@color/colorPrimary"
        app:cornerRadius="@dimen/default_corner_radius"
        app:icon="@drawable/ic_close"
        app:iconGravity="textStart"
        app:iconPadding="5dp"
        app:iconTint="@color/colorPrimary"
        app:rippleColor="#4D004530" />

</LinearLayout>