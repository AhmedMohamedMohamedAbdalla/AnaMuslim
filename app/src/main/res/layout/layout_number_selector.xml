<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageButton
        android:id="@+id/ibtn_decrease"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ats_number"
        android:background="@drawable/btn_bg_circle_green"
        android:padding="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_minus_one"
        app:tint="@color/white"
        tools:ignore="ContentDescription" />

    <com.typ.muslim.ui.AMTextSwitcher
        android:id="@+id/ats_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/ibtn_increase"
        app:textColor="@color/darkAdaptiveColor"
        app:textGravity="center" />

    <ImageButton
        android:id="@+id/ibtn_increase"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_bg_circle_green"
        android:padding="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_plus_one"
        app:tint="@color/white"
        tools:ignore="ContentDescription" />

</RelativeLayout>
