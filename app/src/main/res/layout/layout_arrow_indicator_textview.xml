<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_arrow_indicator"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:padding="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_arrow_to_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/green"
        tools:ignore="ContentDescription" />

    <com.typ.muslim.ui.AMTextSwitcher
        android:id="@+id/ts_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/img_arrow_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_arrow_indicator"
        app:layout_constraintTop_toTopOf="@id/img_arrow_indicator"
        app:textColor="@color/green"
        app:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>