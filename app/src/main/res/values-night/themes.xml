<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AnaMuslim.SplashScreen" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#385048</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.AnaMuslim" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color and surface color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/bg_container</item>
        <item name="colorSurface">@color/adaptiveBackgroundColor</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <!-- Status bar color and icons color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/adaptiveBackgroundColor</item>
        <!--item name="android:colorPrimaryDark" tools:targetApi="l">@color/transparent</item-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- AnaMuslim custom theme-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetStyle">@style/BottomSheets</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>